<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Toolbar -->
    <style name="App.Widget.ToolBarStyle" parent="Widget.Material3.Toolbar">
        <item name="colorControlNormal">@color/bar_icon_tint_color</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="theme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:background">@color/bar_background_color</item>
        <item name="titleTextColor">@color/bar_title_color</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="navigationIcon">@drawable/baseline_back_24</item>
        <item name="collapseIcon">@drawable/baseline_back_24</item>
        <item name="navigationIconTint">@color/bar_title_color</item>
        <item name="titleTextAppearance">?attr/textAppearanceTitleMedium</item>
    </style>

    <style name="App.Widget.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/fancy_orange</item>
        <item name="android:background">@drawable/tab_background_drawable</item>
        <item name="android:contentInsetStart">?actionBarInsetStart</item>
        <item name="tabSelectedTextColor">@color/fancy_orange</item>
    </style>

    <style name="App.Widget.ToolBar.Editor" parent="">
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="theme">@style/ThemeOverlay.Material3.Light</item>
        <item name="android:background">@color/toolbar_editor_background_color</item>
        <item name="titleTextColor">@color/toolbar_editor_title_color</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="navigationIcon">@drawable/baseline_back_24</item>
        <item name="navigationIconTint">@color/toolbar_editor_title_color</item>
    </style>

    <style name="App.Widget.SearchView" parent="Widget.Material3.SearchView">
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="closeIcon">@drawable/baseline_close_24</item>
        <item name="goIcon">@null</item>
        <item name="commitIcon">@null</item>
        <item name="layout">@layout/layout_search_view</item>
        <item name="queryBackground">@drawable/shape_search</item>
    </style>

    <!-- ActionMode -->
    <style name="App.ActionMode.LightTheme" parent="Widget.Material3.ActionMode">
        <item name="android:background">@color/bar_background_color</item>
        <item name="background">@color/bar_background_color</item>
        <item name="android:textColor">@color/bar_title_color</item>
        <item name="titleTextStyle">@style/TextAppearance.Material3.ActionBar.Subtitle</item>
    </style>


    <!-- App.BottomNavigationView -->
    <style name="App.Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/bar_background_color</item>
        <item name="backgroundTint">@null</item>
        <item name="itemIconTint">@color/selector_color_primary</item>
        <item name="itemTextColor">@color/selector_color_primary</item>
        <item name="itemRippleColor">@color/fancy_orange_translucent</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">14dp</item>
    </style>

    <!-- App.OverflowMenuStyle -->
    <style name="App.Widget.OverflowMenu" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">10dip</item>
        <item name="android:dropDownHorizontalOffset">-10dip</item>
        <item name="android:dropDownWidth">wrap_content</item>

        <item name="android:background">@color/bar_background_color</item>
        <item name="android:popupBackground">@color/bar_background_color</item>

    </style>

    <!-- App.BottomSheet -->
    <style name="App.Widget.BottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/bar_background_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <!-- App.AlertDialog -->
    <style name="App.AppCompat.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/App.AppCompat.AlertDialog.Material3</item>
        <item name="materialAlertDialogTitleTextStyle">@style/App.AppCompat.AlertDialog.Title
        </item>

        <item name="android:background">@color/white</item>

        <item name="buttonBarPositiveButtonStyle">@style/App.AppCompat.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.AppCompat.AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/App.AppCompat.AlertDialog.Button</item>

        <!--        <item name="android:windowElevation">0dp</item>-->

        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorSurface">@color/alert_dialog_background_color</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
    </style>

    <style name="App.AppCompat.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="App.AppCompat.AlertDialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fancy_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.AppCompat.AlertDialog.Material3" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>


    <!-- App.Button.OutlinedButton -->
    <style name="App.Widget.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bar_title_color</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.OutlinedButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button.OutlinedButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/bar_background_color</item>
        <item name="colorOnContainer">@color/material_grey_900</item>
    </style>

    <!-- App.Button -->
    <style name="App.Widget.Button" parent="Widget.Material3.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>


    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/md_theme_primary</item>
        <item name="colorOnContainer">@color/material_grey_50</item>
    </style>

    <!-- App.TextInput -->
    <style name="App.Widget.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/item_title_color</item>
        <item name="colorOnSurface">@color/item_title_color</item>
        <item name="colorError">@color/red</item>
    </style>

    <!-- App.EditText -->
    <style name="App.Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_solid_grey88_radius_8</item>
        <item name="android:textColor">@color/bar_title_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <!-- Preference -->
    <style name="Preference.Material3.SimpleMenuPreference" parent="Preference.SimpleMenuPreference">
        <item name="android:popupMenuStyle">
            @style/Widget.Material3.Preference.SimpleMenuPreference.PopupMenu
        </item>
    </style>

    <style name="Widget.Material3.Preference.SimpleMenuPreference.PopupMenu" parent="Widget.Preference.SimpleMenuPreference.PopupMenu">
        <!--        <item name="android:popupBackground">@drawable/m3_popupmenu_background_overlay</item>-->
        <item name="android:background">@color/white</item>"
    </style>

    <style name="Preference.Material3.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <!--        <item name="widgetLayout">@layout/preference_widget_material_switch_m2</item>-->
        <item name="android:widgetLayout">@layout/preference_widget_material_switch_m3</item>
    </style>

    <style name="Widget.PreferenceCategory" parent="Preference.Category">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- Notifications -->
    <style name="NotificationTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationContent" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--ShapeableImageView-->
    <style name="ShapeCircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeCorner4Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeCorner2Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>


    <style name="ListItemTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/lv_title_txt_size</item>
        <item name="android:textColor">@color/item_title_color</item>
    </style>

    <style name="ListItemSubTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/lv_subtitle_txt_size</item>
        <item name="android:textColor">@color/item_subtitle_color</item>
    </style>

    <style name="Preference.Title">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/item_title_color</item>
    </style>

    <style name="Preference.Summary">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">@integer/list_item_title_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/item_subtitle_color</item>
    </style>

    <style name="Widget.RecyclerView.Style" parent="">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">16dp</item>
        <!--        <item name="android:scrollbarSize">16dp</item>-->
        <!--        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical</item>-->
        <!--        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_bg</item>-->
    </style>

    <style name="ThemeOverlay.Editor.AlertDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Editor.IconStyle" parent="">
        <item name="android:scaleType">centerInside</item>
        <item name="background">?android:selectableItemBackground</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>
</resources>
