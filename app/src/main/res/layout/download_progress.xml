<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="5dp">
	<ImageView
		android:src="@drawable/icon"
		android:layout_width="wrap_content"
		android:id="@+id/download_icon"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"></ImageView>
	<TextView
		android:text="TextView"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/download_icon"
		android:layout_toRightOf="@+id/download_icon"
		android:layout_width="fill_parent"
		android:id="@+id/tv_download_title"
		android:layout_marginLeft="6dp"
		android:textColor="@color/grey"></TextView>
	<ProgressBar
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_download_title"
		android:layout_alignLeft="@+id/tv_download_title"
		android:layout_width="fill_parent"
		android:layout_marginTop="5dp"
		android:id="@+id/pb_download_progressbar"></ProgressBar>
</RelativeLayout>