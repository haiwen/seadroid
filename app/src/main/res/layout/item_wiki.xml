<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/bar_background_color"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:strokeColor="@color/fancy_white"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:src="@drawable/icon_wikis"
                app:tint="@color/fancy_orange" />

            <TextView
                android:id="@+id/item_publish_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/shape_stroke1_radius16_solid_white"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="@string/published"
                android:textColor="@color/item_subtitle_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="start|top"
            android:lineHeight="20sp"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="@color/item_title_color"
            android:textSize="14sp"
            tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_user_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/item_user_avatar"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/default_avatar"
                    app:shapeAppearance="@style/ShapeCircleStyle" />

                <TextView
                    android:id="@+id/item_user_name"
                    style="@style/ListItemTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_time"
                style="@style/ListItemSubTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="@string/app_name" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>