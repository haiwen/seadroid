<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_500"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_header1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_header"/>

        <ImageView
            android:id="@+id/img_bold"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_bold"/>

        <ImageView
            android:id="@+id/img_italic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_italic"/>


        <ImageView
            android:id="@+id/img_horizontal_rules"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:padding="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_horiz_black"/>

        <ImageView
            android:id="@+id/img_todo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_black"/>

        <ImageView
            android:id="@+id/img_todo_done"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_focus"/>

        <ImageView
            android:id="@+id/img_strike_through"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_strikethrough"/>


        <ImageView
            android:id="@+id/img_code"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_quote"/>

        <ImageView
            android:id="@+id/img_block_quote"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_right"/>

        <ImageView
            android:id="@+id/img_unorder_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_bullet"/>

        <ImageView
            android:id="@+id/img_order_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_list"/>

        <ImageView
            android:id="@+id/img_link"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/ic_format_link"/>
    </LinearLayout>

</HorizontalScrollView>