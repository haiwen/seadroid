<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_500"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_header1"
            style="@style/Editor.IconStyle"
            android:src="@drawable/icon_editor_h1"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/img_bold"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_bold" />

        <ImageView
            android:id="@+id/img_italic"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_italic" />


        <ImageView
            android:id="@+id/img_horizontal_rules"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_hori_line" />

        <ImageView
            android:id="@+id/img_todo"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_check_box_outline" />

        <ImageView
            android:id="@+id/img_todo_done"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_check_square" />

        <ImageView
            android:id="@+id/img_strike_through"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_strikethrough" />


        <ImageView
            android:id="@+id/img_code"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_quote_left" />

        <ImageView
            android:id="@+id/img_block_quote"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_next_page" />

        <ImageView
            android:id="@+id/img_unorder_list"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_unordered_list" />

        <ImageView
            android:id="@+id/img_order_list"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_ordered_list" />

        <ImageView
            android:id="@+id/img_link"
            style="@style/Editor.IconStyle"
            app:tint="@color/white"
            android:src="@drawable/icon_editor_link" />
    </LinearLayout>

</HorizontalScrollView>