<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_progress_bar"
        layout="@layout/toolbar_actionbar_progress_bar" />

    <LinearLayout
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/divider_color" />

    <LinearLayout
        android:id="@+id/ll_editor_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bar_background_color"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.seafile.seadroid2.widget.CheckableForegroundLinearLayout
            android:id="@+id/editor_undo_container"
            android:layout_margin="4dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/selector_checkable_linearlayout">

            <ImageView
                android:id="@+id/editor_undo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/baseline_undo_24"
                app:tint="@color/grey" />
        </com.seafile.seadroid2.widget.CheckableForegroundLinearLayout>

        <com.seafile.seadroid2.widget.CheckableForegroundLinearLayout
            android:id="@+id/editor_redo_container"
            android:layout_margin="4dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/selector_checkable_linearlayout">

            <ImageView
                android:id="@+id/editor_redo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/baseline_redo_24"
                app:tint="@color/grey" />
        </com.seafile.seadroid2.widget.CheckableForegroundLinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider_color" />

        <com.seafile.seadroid2.widget.CheckableForegroundLinearLayout
            android:id="@+id/editor_text_style_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_checkable_linearlayout">

            <TextView
                android:id="@+id/editor_text_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/app_name" />

        </com.seafile.seadroid2.widget.CheckableForegroundLinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider_color" />

        <com.seafile.seadroid2.widget.CheckableForegroundLinearLayout
            android:id="@+id/editor_unordered_list_container"
            android:layout_margin="4dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/selector_checkable_linearlayout">

            <ImageView
                android:id="@+id/editor_unordered_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/baseline_redo_24"
                app:tint="@color/grey" />

        </com.seafile.seadroid2.widget.CheckableForegroundLinearLayout>

        <com.seafile.seadroid2.widget.CheckableForegroundLinearLayout
            android:id="@+id/editor_ordered_list_container"
            android:layout_margin="4dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/selector_checkable_linearlayout">

            <ImageView
                android:id="@+id/editor_ordered_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/baseline_undo_24"
                app:tint="@color/grey" />

        </com.seafile.seadroid2.widget.CheckableForegroundLinearLayout>

        <com.seafile.seadroid2.widget.CheckableForegroundLinearLayout
            android:id="@+id/editor_checkbox_container"
            android:layout_margin="4dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/selector_checkable_linearlayout">

            <ImageView
                android:id="@+id/editor_checkbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?android:selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/baseline_redo_24"
                app:tint="@color/grey" />
        </com.seafile.seadroid2.widget.CheckableForegroundLinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/bar_background_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sdoc_outline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/ripple_icon_middle"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_outline_24"
            app:tint="@color/bottom_bar_icon_tint_color" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sdoc_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/ripple_icon_middle"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_info_24"
            app:tint="@color/bottom_bar_icon_tint_color" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sdoc_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/ripple_icon_middle"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_comment_24"
            app:tint="@color/bottom_bar_icon_tint_color" />
    </LinearLayout>

    <View
        android:id="@+id/ll_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
