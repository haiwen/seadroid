<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lv_item_height"
    android:layout_marginLeft="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_file_type_fileitem"
        android:layout_width="@dimen/lv_icon_width"
        android:layout_height="@dimen/lv_icon_width"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/empty_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_file_type_fileitem"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <CheckBox
            android:id="@+id/checkbox_file_fileitem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:checked="false"
            android:clickable="false" />


        <ImageView
            android:id="@+id/iv_file_enter_fileitem"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/action_export" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_file_name_fileitem"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/fancy_dark_black"
                android:textSize="@dimen/lv_title_txt_size" />

            <TextView
                android:id="@+id/tv_file_detail_fileitem"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="大小:   文件： 文件夹："
                android:textColor="@color/fancy_black"
                android:textSize="@dimen/lv_subtitle_txt_size" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:background="@color/fancy_dark_gray" />

</RelativeLayout>