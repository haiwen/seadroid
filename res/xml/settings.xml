<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/security" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="gesture_lock_switch_key"
            android:summaryOff="@string/gesture_lock_off"
            android:summaryOn="@string/gesture_lock_on"
            android:title="@string/gesture_lock"
            android:layout="@layout/seafile_checkbox_layout" >
        </CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_camera_upload_info_title" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="camera_upload_switch_key"
            android:summaryOff="@string/settings_stopUpService"
            android:summaryOn="@string/settings_startUpService"
            android:title="@string/settings_start" 
            android:layout="@layout/seafile_checkbox_layout" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="allow_mobile_connections_switch_key"
            android:summaryOff="@string/settings_default_wifi_connection"
            android:summaryOn="@string/settings_use_mobile_connections"
            android:title="@string/settings_allow_mobile_connections"
            android:layout="@layout/seafile_checkbox_layout" >
        </CheckBoxPreference>

        <Preference
            android:key="camera_upload_repo_key"
            android:layout="@layout/preference"
            android:persistent="true"
            android:summary="@string/settings_hint"
            android:title="@string/settings_repo" />
    </PreferenceCategory>

</PreferenceScreen>