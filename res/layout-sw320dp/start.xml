<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/welcome_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_title_margin_top"
        android:gravity="center_horizontal"
        android:textSize="@dimen/tv_title_txt_size"
        android:textColor="@color/tv_title_color"
        android:text="@string/welcome_to_seafile" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_subtitle_margin_top"
        android:gravity="center_horizontal"
        android:textSize="@dimen/tv_subtitle_txt_size"
        android:textColor="@color/tv_subtitle_color"
        android:text="@string/select_account" />

    <ListView
        android:id="@+id/account_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/lv_margin_top"
        android:divider="@drawable/lv_divider_inset_normal"
            />
</LinearLayout>