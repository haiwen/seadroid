<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageViewFromMediaChooserGridItemRowView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"/>

    <CheckedTextView
            android:id="@+id/checkTextViewFromMediaChooserGridItemRowView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imageViewFromMediaChooserGridItemRowView"
            android:checkMark="@drawable/checkbox_btn_holo_light"
            android:padding="5dp"
            android:paddingBottom="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

</RelativeLayout>